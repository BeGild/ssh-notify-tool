    "axios": "^1.6.0",
    "node-notifier": "^10.0.1",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "yargs": "^17.7.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
