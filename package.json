{
  "name": "ssh-notify-tool",
  "version": "1.0.0",
  "description": "A universal notification tool for CLI applications supporting both local and remote SSH environments",
  "main": "index.js",
  "scripts": {
    "dev:server": "nodemon server/src/app.js",
    "dev:client": "nodemon client/src/cli.js",
    "start:server": "node server/src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "notification",
    "cli",
    "ssh",
    "desktop",
    "email",
    "sms",
    "cross-platform"
  ],
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}