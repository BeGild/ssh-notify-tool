{
  "name": "ssh-notify-tool",
  "version": "1.0.0",
  "description": "Universal notification system for CLI tools with support for local and remote execution via SSH",
  "main": "src/server/NotificationServer.js",
  "bin": {
    "notify-server": "src/bin/notify-server.js",
    "notify-cli": "src/cli/notify-cli.js"
  },
  "scripts": {
    "start": "node src/bin/notify-server.js",
    "client": "node src/cli/notify-cli.js",
