{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "server/src/**/*.js",
    "client/src/**/*.js",
    "shared/src/**/*.js",
    "!**/node_modules/**",
    "!**/test/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/test/**/*.test.js",
    "**/test/**/*.spec.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}